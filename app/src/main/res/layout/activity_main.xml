<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
            android:text="Start Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/startButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"
            android:onClick="startTimer"/>
    <Button
            android:text="Stop Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/stopButton"
            app:layout_constraintStart_toStartOf="@+id/startButton" app:layout_constraintEnd_toEndOf="@+id/startButton"
            app:layout_constraintTop_toBottomOf="@+id/startButton" android:layout_marginTop="20dp"
            android:onClick="stopTimer"/>

</androidx.constraintlayout.widget.ConstraintLayout>